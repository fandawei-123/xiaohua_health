<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huahua.dao.MenuDao">

    <!--不分页查询所有的菜单-->
    <select id="findAllMenus" resultType="com.huahua.pojo.Menu">
        select *
        from t_menu
    </select>

    <!--通过角色id查询与他关联的所有菜单-->
    <select id="findByRole" parameterType="int">
        select *
        from t_menu
        where id in
              (select menu_id from t_role_menu where role_id = #{id})
    </select>

    <resultMap id="findMap" type="com.huahua.pojo.Menu">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="linkUrl" column="linkUrl"/>
        <result property="path" column="path"/>
        <result property="priority" column="priority"/>
        <result property="icon" column="icon"/>
        <result property="description" column="description"/>
        <result property="parentMenuId" column="parentMenuId"/>
        <result property="level" column="level"/>
        <collection property="children" ofType="Menu" column="id"
                    select="com.huahua.dao.MenuDao.findChildren">
        </collection>
    </resultMap>

    <!--分页查询-->
    <select id="findPage" parameterType="string" resultMap="findMap">
        select m.* from t_menu m
        <where>
            <if test="value == null">
                m.parentMenuId IS NULL
            </if>
            <if test="value != null and value.length > 0">
                m.name like concat('%',#{value},'%') and m.parentMenuId IS NULL
            </if>
        </where>
        order by path asc
    </select>

    <select id="findChildren" parameterType="int" resultMap="findMap">
        select *
        from t_menu as m
        where m.parentMenuId = #{id}
        order by priority asc

    </select>

    <!--查询所有菜单的名字与id-->
    <select id="findMenus" resultType="Map">
        select name as label, id as value
        from t_menu
    </select>

    <!--通过菜单名称或者请求路径查找菜单-->
    <select id="findByNameAndLkurl" resultType="com.huahua.pojo.Menu">
        select * from t_menu where name=#{name}
        <if test="linkUrl != null and linkUrl.length > 0">
            or linkUrl=#{linkUrl}
        </if>
    </select>

    <!--添加菜单-->
    <insert id="add" parameterType="com.huahua.pojo.Menu">
        insert into t_menu
        values ( #{id}, #{name}, #{linkUrl}, #{path}, #{priority}, #{icon}
               , #{description}, #{parentMenuId}, #{level})
    </insert>

    <!--通过id查找菜单-->
    <select id="findById" parameterType="int" resultType="com.huahua.pojo.Menu">
        select *
        from t_menu
        where id = #{id}
    </select>

    <!--编辑菜单-->
    <update id="edit" parameterType="com.huahua.pojo.Menu">
        update t_menu
        set name         = #{name},
            linkUrl      = #{linkUrl},
            path         = #{path},
            priority     = #{priority},
            icon         = #{icon},
            description  = #{description},
            parentMenuId = #{parentMenuId},
            level        = #{level}
        where id = #{id}
    </update>

    <!--通过id查询关联的菜单-->
    <select id="findByParentId" parameterType="int" resultType="com.huahua.pojo.Menu">
        select *
        from t_menu
        where parentMenuId = #{id}
    </select>

    <!--通过菜单id删除菜单-->
    <delete id="delete" parameterType="int">
        delete
        from t_menu
        where id = #{id}
    </delete>

    <!--通过菜单id删除与角色之间的关系-->
    <delete id="deleteConnection4RoleBymid" parameterType="int">
        delete
        from t_role_menu
        where menu_id = #{id}
    </delete>

    <!--通过角色id查询所有的关联一级菜单-->
    <select id="findAllFistMenusById" parameterType="int" resultType="com.huahua.pojo.Menu">
        select *
        from t_menu
        where id in
              (select rm.menu_id
               from t_role_menu as rm
               where rm.role_id in
                     (select ur.role_id from t_user_role as ur where ur.user_id = #{id}))
          and parentMenuId is null
        order by priority asc
    </select>

    <!--通过父菜单id查询chiren菜单-->
    <select id="findSecondMenusByMenuId" parameterType="int" resultType="com.huahua.pojo.Menu">
        select *
        from t_menu
        where id in
              (select rm.menu_id
               from t_role_menu as rm
               where rm.role_id in
                     (select ur.role_id from t_user_role as ur where ur.user_id = #{id}))
          and parentMenuId is not null
          and parentMenuId = #{menuId}
        order by priority asc
    </select>
</mapper>